<html>
	<body>
		<h2>Usage Statistics Report</h2>
		<ul>
			<li><b>Site</b>: $site</li>
			<li><b>Period</b>: $period</li>
		</ul>
		<h3>Patient record usage by role:</h3>
		<table style="width: 100%" cellspacing="0" cellpadding="2">
			<tr>
				<th style="background-color: #DDD">Role</th>
				<th style="background-color: #DDD">Active Users</th>
				<th style="background-color: #DDD">All Usages</th>
				<th style="background-color: #DDD">Creates</th>
				<th style="background-color: #DDD">Encounters</th>
				<th style="background-color: #DDD">Updates</th>
				<th style="background-color: #DDD">Voids</th>
				<th style="background-color: #DDD">Last usage</th>
			</tr>
			#foreach( $row in $roleStats )
			<tr>
				<td style="border-top: 1px solid #CCC">$row.get(0)</td>
				<td style="text-align: center; border-top: 1px solid #CCC">$row.get(1)</td>
				<td style="text-align: center; border-top: 1px solid #CCC">$row.get(2)</td>
				<td style="text-align: center; border-top: 1px solid #CCC">$row.get(3)</td>
				<td style="text-align: center; border-top: 1px solid #CCC">$row.get(4)</td>
				<td style="text-align: center; border-top: 1px solid #CCC">$row.get(5)</td>
				<td style="text-align: center; border-top: 1px solid #CCC">$row.get(6)</td>
				<td style="text-align: center; border-top: 1px solid #CCC">$row.get(7)</td>
			</tr>
			#end
		</table>
		<p align="center"><small>Generated by Usage Statistics $moduleVersion</small></p>
	</body>
</html>
